<button 
  id="theme-toggle"
  onclick="window.toggleThemeAndIcons()" 
  class="p-2 rounded-lg hover:bg-light-card-bg dark:hover:bg-dark-card-bg transition-colors"
  aria-label="Toggle theme"
>
  <!-- Sun icon for dark mode -->
  <svg id="theme-toggle-light-icon" class="w-5 h-5 text-light-subtext dark:text-dark-subtext hidden" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
  </svg>
  <!-- Moon icon for light mode -->
  <svg id="theme-toggle-dark-icon" class="w-5 h-5 text-light-subtext dark:text-dark-subtext hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
  </svg>
</button>

<script is:inline>
  // Make updateThemeIcons globally accessible
  window.updateThemeIcons = function(isDark) {
    const lightIcon = document.getElementById('theme-toggle-light-icon');
    const darkIcon = document.getElementById('theme-toggle-dark-icon');
    
    if (lightIcon && darkIcon) {
      if (isDark) {
        // Show sun icon, hide moon icon
        lightIcon.classList.remove('hidden');
        lightIcon.classList.add('block'); // Ensure it's displayed
        darkIcon.classList.remove('block');
        darkIcon.classList.add('hidden');
      } else {
        // Show moon icon, hide sun icon
        lightIcon.classList.remove('block');
        lightIcon.classList.add('hidden');
        darkIcon.classList.remove('hidden');
        darkIcon.classList.add('block'); // Ensure it's displayed
      }
    }
  }
  // Initial icon setup will be handled by CommonScripts.astro
</script>
