---
interface Props {
  builtWithText: string;
  andText: string;
  copyrightName: string;
}

const { builtWithText, andText, copyrightName } = Astro.props;
const currentYear = new Date().getFullYear();
const copyrightText = `${copyrightName} Â© ${currentYear}`;
---

<footer class="border-t border-gray-200 dark:border-gray-700 py-12 mt-16">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <p class="text-sm text-gray-500 dark:text-gray-400 mb-4 md:mb-0">
        {builtWithText} 
        <a href="https://astro.build" target="_blank" rel="noopener noreferrer" aria-label="Astro website" class="text-blue-600 dark:text-blue-400 hover:underline font-semibold">Astro</a> 
        {andText} 
        <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" aria-label="Tailwind CSS website" class="text-blue-600 dark:text-blue-400 hover:underline font-semibold">Tailwind CSS</a>.
      </p>
      
      <div class="flex items-center gap-4">
        <span class="text-sm text-gray-500 dark:text-gray-400">
          {copyrightText}
        </span>
      </div>
    </div>
  </div>
</footer>
