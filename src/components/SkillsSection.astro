---
interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 py-16">
  <div class="max-w-4xl">
    <header>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-12">
        {title}
      </h2>
    </header>
    
    <div class="flex flex-wrap gap-2">
      {skills.map((skill) => (
        <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm rounded-full">
          {skill}
        </span>
      ))}
    </div>
  </div>
</section>
