---
interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 py-8 md:py-16 scroll-animate">
  <div class="max-w-4xl">
    <header class="scroll-animate-fast">
      <h2 class="text-3xl md:text-4xl font-bold text-light-text dark:text-dark-text mb-12">
        {title}
      </h2>
    </header>

    <div class="flex flex-wrap gap-2 stagger-children">
      {skills.map((skill) => (
        <span class="px-3 py-1 bg-light-tag-bg dark:bg-dark-tag-bg text-light-text dark:text-dark-text text-sm rounded-full">
          {skill}
        </span>
      ))}
    </div>
  </div>
</section>
